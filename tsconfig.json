{
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "compilerOptions": {
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "target": "ESNext",
        "module": "CommonJS",
        "outDir": "./dist",
        "allowJs": true,
        "noImplicitAny": false,
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
            "@config": [
                "src/config/index"
            ],
            "@common/*": [
                "src/common/*"
            ],
            "@endpoints/*": [
                "src/endpoints/*"
            ],
            "@src/*": [
                "src/*"
            ]
        }
    },
    "include": [
        "src/**/*",
        "tests/**/*"
    ]
}