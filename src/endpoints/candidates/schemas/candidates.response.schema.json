{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "candidates.response.schema.json",
    "title": "/:dacId/candidates?walletId={walletId} response schema",
    "type": "array",
    "minItems": 0,
    "items": {
        "$ref": "#/$defs/candidate"
    },
    "$defs": {
        "candidate": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "description": {
                    "type": "string"
                },
                "email": {
                    "type": "string"
                },
                "familyName": {
                    "type": "string"
                },
                "gender": {
                    "type": "string"
                },
                "givenName": {
                    "type": "string"
                },
                "image": {
                    "type": "string"
                },
                "timezone": {
                    "type": "string"
                },
                "url": {
                    "type": "string"
                },
                "account": {
                    "$ref": "#/$defs/account"
                },
                "requestedpay": {
                    "type": "string"
                },
                "votePower": {
                    "type": "integer"
                },
                "rank": {
                    "type": "integer"
                },
                "isActive": {
                    "type": "boolean"
                },
                "totalVotes": {
                    "type": "integer"
                },
                "voteDecay": {
                    "type": "integer"
                },
                "signedDaoTermsVersion": {
                    "type": "integer"
                },
                "hasSignedCurrentDaoTerms": {
                    "type": "boolean"
                },
                "isFlagged": {
                    "type": "boolean"
                },
                "dacId": {
                    "type": "string"
                }
            },
            "required": [
                "account",
                "requestedpay",
                "votePower",
                "rank",
                "isActive",
                "totalVotes",
                "voteDecay",
                "signedDaoTermsVersion",
                "hasSignedCurrentDaoTerms",
                "isFlagged",
                "dacId"
            ]
        },
        "account": {
            "type": "string",
            "minLength": 1
        }
    }
}