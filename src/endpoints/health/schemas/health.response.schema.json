{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "health.response.schema.json",
    "title": "/health response schema",
    "type": "object",
    "properties": {
        "status": {
            "type": "string"
        },
        "version": {
            "$ref": "#/$defs/semanticVerString"
        },
        "timestamp": {
            "type": "integer",
            "minimum": 0
        },
        "uptimeSeconds": {
            "type": "integer",
            "minimum": 0
        },
        "nodeVersion": {
            "$ref": "#/$defs/semanticVerStringWithPrefix"
        },
        "dependencies": {
            "type": "object",
            "properties": {
                "@alien-worlds/api-core": {
                    "$ref": "#/$defs/semanticVerString"
                },
                "@alien-worlds/storage-mongodb": {
                    "$ref": "#/$defs/semanticVerString"
                },
                "@alien-worlds/eos": {
                    "$ref": "#/$defs/semanticVerString"
                },
                "@alien-worlds/eosio-contract-types": {
                    "$ref": "#/$defs/semanticVerString"
                },
                "@alien-worlds/alien-worlds-common": {
                    "$ref": "#/$defs/semanticVerString"
                },
                "@alien-worlds/dao-worlds-common": {
                    "$ref": "#/$defs/semanticVerString"
                },
                "@alien-worlds/index-worlds-common": {
                    "$ref": "#/$defs/semanticVerString"
                },
                "@alien-worlds/stkvt-worlds-common": {
                    "$ref": "#/$defs/semanticVerString"
                },
                "@alien-worlds/token-worlds-common": {
                    "$ref": "#/$defs/semanticVerString"
                }
            },
            "required": [
                "@alien-worlds/api-core",
                "@alien-worlds/storage-mongodb",
                "@alien-worlds/eos",
                "@alien-worlds/eosio-contract-types",
                "@alien-worlds/alien-worlds-common",
                "@alien-worlds/dao-worlds-common",
                "@alien-worlds/index-worlds-common",
                "@alien-worlds/stkvt-worlds-common",
                "@alien-worlds/token-worlds-common"
            ]
        },
        "database": {
            "type": "object",
            "properties": {
                "status": {
                    "type": "string",
                    "minLength": 2
                }
            },
            "required": [
                "status"
            ]
        },
        "blockChainHistory": {
            "type": "object",
            "properties": {
                "currentBlock": {
                    "$ref": "#/$defs/stringOfAtleastOneDigit"
                }
            },
            "required": [
                "currentBlock"
            ]
        }
    },
    "required": [
        "status",
        "version",
        "timestamp",
        "uptimeSeconds",
        "nodeVersion",
        "dependencies",
        "database",
        "blockChainHistory"
    ],
    "$defs": {
        "semanticVerString": {
            "type": "string",
            "pattern": "^[^~]*(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$"
        },
        "semanticVerStringWithPrefix": {
            "type": "string",
            "pattern": "^v(0|[1-9]\\d*)\\.(0|[1-9]\\d*)\\.(0|[1-9]\\d*)$"
        },
        "stringOfAtleastOneDigit": {
            "type": "string",
            "pattern": "^\\d+$"
        }
    }
}